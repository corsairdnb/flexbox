@import flexbox

*
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;

html, body, .wrapper
	height 100%

body
	margin 0
	background #fff
	font 18px/22px Arial, "Helvetica Neue", sans-serif

.wrapper
	display flex
	flex-direction column
	justify-content space-between

header
	background #4ea3ff
	color #fff

footer
	background #666666
	color #fff

.container
	padding 1%